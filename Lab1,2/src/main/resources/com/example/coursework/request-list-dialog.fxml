<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.coursework.fxControllers.RequestListDialog"
      spacing="10" padding="10">
    
    <Label text="Publication Requests" style="-fx-font-size: 16; -fx-font-weight: bold"/>
    
    <ScrollPane fitToWidth="true" prefHeight="300">
        <VBox fx:id="requestsContainer" spacing="10"/>
    </ScrollPane>
    
    <Button fx:id="closeButton" text="Close" onAction="#handleClose" 
            alignment="CENTER_RIGHT" />
</VBox> 